<Window x:Class="WpfApp1.Communication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Communication" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#44318D"></SolidColorBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#8265a8"></Grid>
        <Button Click="Button_Click"  Background="Transparent" BorderThickness="0" Grid.Row="0" Width="30" Height="30" HorizontalAlignment="Left" Margin="10">
            <Image Source="res\icons\back.png"></Image>
        </Button>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ListOfGames">


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
